<%- include('./shared/header')%>

    <title>Document</title>
    </head>

    <body>
        <section class="main p-5">
            <div class="my-3">
                <div class="row justify-content-center align-items-center">
                    <% for( let i=0; i < products.length; i++ ) { %>
                        <div class="col-md-4">
                            <div class="p-3">
                                <div class="card" style="width: 18rem;">
                                    <img src="<%=products[i].images[0]%>" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title"><%=products[i].title%></h5>
                                        <p class="card-text">

                                            <%=products[i].desc%>
                                        </p>
                                        <p class="card-text">

                                            <%=products[i].price%> $
                                        </p>
                                        <a href="/product/<%=products[i]._id%>/delete" class="btn btn-danger p-3">Delete</a>
                                        <a href="/product/<%=products[i]._id%>/update" class="btn btn-info p-3">Update</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>
        <%- include('./shared/footer')%>