<%- include('./shared/header')%>

    <title>Users</title>
    </head>

    <body>
        <section class="main p-5">
            <div class="my-3">
                <div class="row justify-content-center align-items-center">
                    <% for( let i=0; i < users.length; i++ ) { %>
                        <div class="col-md-4">
                            <div class="p-3">
                                <div class="card" style="width: 18rem;">
                                    <img src="<%=users[i].profilePic%>" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">Name: <%=users[i].userName%></h5>
                                        <h5 class="card-title">Age: <%=users[i].age%></h5>
                                        <h5 class="card-title">Phone: <%=users[i].phone%></h5>
                                        <% for( let j=0; j < users.notes?.length; j++ ) { %>
                                            <img src="<%=users[i].notes[i].picture%>" class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <h5 class="card-title">Body: <%=users[i].notes[i].body%>
                                                </h5>
                                            </div>
                                    </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>
        <%- include('./shared/footer')%>