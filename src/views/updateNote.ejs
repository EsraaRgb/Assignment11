<%- include('./shared/header')%>

    <title>Notes</title>
    </head>

    <body>

        <div class="container my-5 p-5">

            <div class="text-center my-1">
                <h2> Add Note</h2>
            </div>
            <div class="my-2">
                                <form class="m-auto w-75 p-5" action="/note/update/<%=note._id%>" method="POST"
                                    enctype="multipart/form-data">
                                    <div class="form-group my-1">
                                        <input value="<%=note.body%>" class="form-control" name="body"
                                            placeholder="Note" type="text" />
                                    </div>
                                    <div class="form-group my-1">
                                        <button class="btn btn-info w-100"> Update Note</button>
                                    </div>
                                </form>
            </div>
        </div>
        </div>
        <%- include('./shared/footer')%>