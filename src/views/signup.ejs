<%- include('./shared/header')%>

    <title>Document</title>
    </head>

    <body>
        <section class="main p-5">
            <div class="container my-5 p-5">
                <div class="w-100 text-center">
                    <h1>Join Us Now</h1>
                </div>
                <% if (errMessage?.length) { %>
                    <div class="alert alert-danger text-center my-1">
                        <%= errMessage %>
                    </div>
                    <% } %>
                        <div class="my-2">
                            <form class="m-auto w-75 p-5" action="/auth/signup" method="POST">
                                <% if (validationErr?.includes('userName')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid UserName
                                    </div>
         
                                    <% } %>
                                <div class="form-group my-1">
                                    <input value="<%=oldInputs?.userName%>" class="form-control" name="userName" placeholder="UserName"
                                        type="text" />
                                </div>
                                <% if (validationErr?.includes('email')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid Email
                                    </div>
         
                                    <% } %>
                                <div class="form-group my-1">
                                    <input value="<%=oldInputs?.email%>" class="form-control" name="email" placeholder="Email"
                                        type="email" />
                                </div>
                                <% if (validationErr?.includes('phone')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid phone
                                    </div>
         
                                    <% } %>
                                <div class="form-group my-1">
                                    <input value="<%=oldInputs?.phone%>" class="form-control" name="phone" placeholder="Phone" type="text" />
                                </div>
                                <% if (validationErr?.includes('password')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid password
                                    </div>
         
                                    <% } %>
                                <div class="form-group my-1">
                                    <input value="<%=oldInputs?.password%>" class="form-control" name="password" placeholder="Password"
                                        type="password" />
                                </div>
                                <% if (validationErr?.includes('cpassword')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid Confirmation-Password
                                    </div>
         
                                    <% } %>
                                <div class="form-group my-1">
                                    <input value="<%=oldInputs?.cpassword%>" class="form-control" name="cpassword"
                                        placeholder="Confirmation-Password" type="password" />
                                </div>

                                <div class="form-group my-1">
                                    <button class="btn btn-info w-100"> SignUp</button>
                                    <a class="my-1 text-center" href="/login">Already have account? login</a>
                                </div>
                            </form>
                        </div>
            </div>
        </section>
        <%- include('./shared/footer')%>